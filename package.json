{
  "name": "simple-nodejs-typescript-starter",
  "version": "1.0.0",
  "description": "Simple Node.js TypeScript Starter | 2021",
  "main": "build/index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=15"
  },
  "scripts": {
    "prebuild": "rimraf ./build",
    "build": "tsc",
    "prestart": "yarn run build",
    "start": "node build/index.js",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "pretty": "prettier 'src/**/*.ts' --write --loglevel warn",
    "test": "jest",
    "test:ci": "jest --coverage --ci",
    "test:unit": "jest --projects jest-unit.config.js",
    "test:e2e": "jest --projects jest-e2e.config.js",
    "prepare": "husky install",
    "cz": "git-cz"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.13.3",
    "@types/node": "^15.12.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "git-cz": "^4.7.6",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "koa": "^2.13.1"
  }
}
